<div class="collections">

	{% if collection.image %}
	<div class="collections__image-wrapper">
		<img src="{{ collection.image| img_url: 'master' }}" alt="{{ collection.image.alt }}" class="collections__image">
	</div>
	{% endif %}
	<div class="container">
		<div class="collections__wrapper">
			{% if collection.description %}
			<header class="collections__header">
					<h1 class="collections__heading">{{ collection.title }}</h1>
					{% if collection.description %}
					<p class="collections__description">{{ collection.description }}</p>
					{% endif %}
			</header>
				{% endif %}
			{% paginate collection.products by 2%}

				<div class="featured-products__items">
					{% for product in collection.products %}
						{% render 'product-tile' with{
							product:product
						} %}
					{% endfor %}
				</div>

			<div class="collections__pagination">
				{% for part in paginate.parts %}
					{% if part.is_link %}
						{{ part.title | link_to: part.url }}
					{% else %}
						<span>{{ part.title }}</span>
						{% endif %}
				{% endfor %}
			</div>
			{% endpaginate %}
		</div>
	</div>
</div>