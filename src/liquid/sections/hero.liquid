{% render 'hero' with {
	settings: section.settings
} %}

{% schema %}
{
	"name" : "Hero",
	"settings" : [
		{
			"type" : "text",
			"id": "heading",
			"label" : "Heading",
			"default" : "Add your new heading here"
		}, 
		{
			"type" : "textarea",
			"id": "copy",
			"label" : "Body Text",
			"default" : "I'm baby hashtag portland cornhole, brunch activated charcoal slow-carb tote bag photo booth waistcoat raclette listicle intelligentsia 3 wolf moon cred."
		},
		{
			"type" : "url",
			"id"	:	"link_url",
			"label" : "Link URL"
		},
		{
			"type": "text", 
			"id": "link_text",
			"label": "Link text ",
			"default": "click"
		},
		{
			"type": "image_picker",
			"id": "small_image",
			"label": "Small Image",
			"info": "Dimensions 991X991"
		},
		{
			"type": "image_picker",
			"id": "large_image",
			"label": "Large Image"
		},
		{
			"type": "select",
			"label": "Alignment",
			"id": "alignment",
			"default": "left",
			"options": [
			{
				"label": "left",
				"value": "left"
			},
			{
				"label": "center",
				"value": "center"
			}
			]
		}
	],
	"presets" : [
		{
			"name" : "Hero",
			"category" : "Image with Text"
		}
	]
}
{% endschema %}